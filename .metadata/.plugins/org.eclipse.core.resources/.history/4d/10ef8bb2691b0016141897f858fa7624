package servlets;

import java.io.IOException;

import javax.servlet.ServletException;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;
import javax.servlet.http.HttpSession;

public class Deconnexion extends HttpServlet {
	public static final String ATT_SESSION_USER = "sessionT_member_p";
    public static final String URL_REDIRECTION = "/connexion.html";

    public void doGet( HttpServletRequest request, HttpServletResponse response ) throws ServletException, IOException {
    	
        /* Récupération et destruction de la session en cours */
        HttpSession session = request.getSession();
        System.out.println("System.out.println(session.getAttribute( ATT_SESSION_USER)); : " + session.getAttribute("sessionT_member_p"));
        session.removeAttribute(ATT_SESSION_USER);
        session.invalidate();

        response.sendRedirect(URL_REDIRECTION );
    }
}